{
  "manifest_version": 2,
  "name": "Well Versed",
  "description": "This extension will help you make informed comments",
  "version": "1.0",

  "browser_action": {
   "default_popup": "app.html"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
   "activeTab"
  ]
}